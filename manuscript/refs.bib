title = {A Phylogenetic Framework for Evolutionary Study of the Nightshades ({S}olanaceae): a Dated 1000-tip Tree},
author = {S\"{a}rkinen, Tiina and Bohs, Lynn and Olmstead, Richard G and Knapp, Sandra},
