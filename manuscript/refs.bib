@article{mayrose_2011,
title = {Recently formed polyploid plants diversify at lower rates.},
author = {Mayrose, Itay and Zhan, Shing H and Rothfels, Carl J and Magnuson-Ford, Karen and Barker, Michael S and Rieseberg, Loren H and Otto, Sarah P},
pages = {1257},
url = {http://dx.doi.org/10.1126/science.1207205},
year = {2011},
